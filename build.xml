		<mkdir dir="${jars.dir}"/>
		<jar destfile="${jars.dir}/PaladinSolver.jar" basedir="${classes.dir}"/>		
	</target>
	
	<target name="exportPriest">
		<mkdir dir="${classes.dir}"/>
