<project name="BetterBotProfiles" basedir="." default="createAll">
	
    <property name="src.dir" value="src"/>
	<property name="dist.dir" value="dist"/>
    <property name="build.dir" value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="jars.dir" value="${dist.dir}/jars"/>

	<target name="compileAll">
		<mkdir dir="${classes.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" destdir="${classes.dir}" classpath="lib/libBetterBot.jar"/>
	</target>
	
	<target name="createAllJars" depends="compileAll">
		<mkdir dir="${jars.dir}"/>
		<jar destfile="${jars.dir}/Rotations.jar" basedir="${classes.dir}"/>
	</target>
	
	<target name="exportDruid">
		<mkdir dir="${classes.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="${src.dir}/rotations/DruidSolver.java" destdir="${classes.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${jars.dir}"/>
		<jar destfile="${jars.dir}/DruidSolver.jar" basedir="${classes.dir}"/>		
	</target>
	
	<target name="exportHunter">
		<mkdir dir="${classes.dir}"/>
