	<target name="exportWarrior">
		<mkdir dir="${classes.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="${src.dir}/rotations/WarriorSolver.java" destdir="${classes.dir}" classpath="lib/libBetterBot.jar"/>
