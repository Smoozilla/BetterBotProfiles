<project name="BetterBotProfiles" basedir="." default="createAll">
	
    <property name="src.dir" value="src"/>
		<property name="dist.dir" value="dist"/>
    <property name="build.dir" value="build"/>

	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>
	
	<target name="compileAll">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
	</target>
	
	<target name="createAllJars" depends="compileAll">
		<mkdir dir="${dist.dir}"/>
		<jar destfile="${dist.dir}/Rotations.jar" basedir="${build.dir}"/>
	</target>
	
	<target name="expDruid">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="DruidSolver.java" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/DruidSolver.jar" includes="rotations/DruidSolver.class"/>
	</target>	
	
	<target name="expHunter" depends="clean">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="HunterSolver.java" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/HunterSolver.jar" includes="rotations/HunterSolver.class"/>
	</target>	
	
	<target name="expMage">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="MageSolver.java" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/MageSolver.jar" includes="rotations/MageSolver.class"/>
	</target>
	
	<target name="expPaladin">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="PaladinSolver.java" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/PaladinSolver.jar" includes="rotations/PaladinSolver.class"/>
	</target>
	
	<target name="expPriest">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="PriestSolver.java" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/PriestSolver.jar" includes="rotations/PriestSolver.class"/>
	</target>
	
	<target name="expRogue">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="RogueSolver.java" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/RogueSolver.jar" includes="rotations/RogueSolver.class"/>
	</target>
	
	<target name="expShaman">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="ShamanSolver.java" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/ShamanSolver.jar" includes="rotations/ShamanSolver.class"/>
	</target>
	
	<target name="expWarrior">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}/rotations" includes="WarriorSolver.java" destdir="${build.dir}" classpath="lib/libBetterBot.jar"/>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/WarriorSolver.jar" includes="rotations/WarriorSolver.class"/>
	</target>
	
	<target name="createAll" depends="createAllJars,expDruid,expHunter,expMage,expPaladin,expPriest,expRogue,expShaman,expWarrior"/>
	
</project>