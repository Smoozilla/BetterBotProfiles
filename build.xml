		<mkdir dir="${jars.dir}"/>
		<jar destfile="${jars.dir}/PriestSolver.jar" basedir="${classes.dir}"/>		
	</target>
	
	<target name="exportRogue">
		<mkdir dir="${classes.dir}"/>
